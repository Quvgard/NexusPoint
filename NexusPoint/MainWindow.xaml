<Window x:Class="NexusPoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexusPoint"
        mc:Ignorable="d"
        Title="NexusPoint - Выбор режима" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="CashierModeButton" Content="Режим кассы" Width="250" Height="50" Margin="10" Click="CashierModeButton_Click"/>
            <Button x:Name="ManagerModeButton" Content="Управление складом и акциями" Width="250" Height="50" Margin="10" Click="ManagerModeButton_Click"/>
            <!-- Название второй кнопки можно скорректировать -->
        </StackPanel>
    </Grid>
</Window>